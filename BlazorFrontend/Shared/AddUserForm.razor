<h3>AddUserForm</h3>
<div class="container">


    <EditForm Model="@user" OnValidSubmit="@HandleValidSubmit">

        <div class="mb-3">
            <label for="userfname" class="form-label">First Name</label>
            <InputText id="fname" class="form-control" @bind-Value="user.FirstName" />
        </div>
        <div class="mb-3">
            <label for="userlname" class="form-label">Last Name</label>
            <InputText id="shortdescription" class="form-control" @bind-Value="user.LastName" />
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <InputText type="password" id="password" class="form-control" @bind-Value="user.Password" />
        </div>
        <div class="mb-3">
            <label for="Price" class="form-label">Email</label>
            <InputText id="price" class="form-control" @bind-Value="user.Email" />
        </div>
 @*       <div class="mb-3">
            <label for="adressid" class="form-label">Adress Id</label>
            <InputNumber id="image" class="form-control" @bind-Value="user.AdressId" />
        </div>*@

        <div class="mb-5">
            <button class="btn btn-secondary" type="submit">Add New User</button>
        </div>
    </EditForm>
</div>


@code {
    private User user = new();

    private async Task HandleValidSubmit()
    {
        await Http.PostAsJsonAsync("https://localhost:44398/api/users", user);
        user = new();

        StateHasChanged();
    }


    

}
